datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Article {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    title     String
    tags      String[]
    image     String
    content   String
    likes     Int      @default(0)
    comments  String[]
}
