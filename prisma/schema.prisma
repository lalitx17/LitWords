datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model user {
    userID       String @id @default(cuid())
    username     String
    salt         String
    passwordHash String
}

model Article {
    articleId String    @id @default(cuid())
    createdAt DateTime  @default(now())
    title     String
    tags      String[]
    content   String
    likes     Int       @default(0)
    comments  Comment[]
}

model Token {
    tokenId String @id @default(cuid())
    userId  String
    value   String
}

model Comment {
    commentId String  @id @default(cuid())
    name      String
    email     String
    comment   String
    article   Article @relation(fields: [commentId], references: [articleId])
}
